<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <LinearLayout
      android:id="@+id/tab_fragment_area"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/tab_fragment_bottom"
      android:layout_weight="1.0"
      android:orientation="vertical"
      />

  <com.zhy.android.percent.support.PercentLinearLayout
      android:id="@+id/tab_fragment_bottom"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignParentBottom="true"
      android:background="@color/module_19"
      android:orientation="horizontal"
      >

    <RelativeLayout
        android:id="@+id/back_area"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/click_ripple"
        android:clickable="true"
        app:layout_widthPercent="20%w"
        >

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:src="@mipmap/back"
          />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/to_right_area"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/click_ripple"
        android:clickable="true"
        app:layout_widthPercent="20%w"
        >

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:src="@mipmap/right"
          />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_area"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/click_ripple"
        android:clickable="true"
        app:layout_widthPercent="20%w"
        >

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:src="@mipmap/more"
          />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shouye_area"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/click_ripple"
        android:clickable="true"
        app:layout_widthPercent="20%w"
        >

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:src="@mipmap/home"
          />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab_count_area"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/click_ripple"
        android:clickable="true"
        app:layout_widthPercent="20%w"
        >

      <TextView
          android:id="@+id/tab_count_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:background="@drawable/tabcountborder"
          android:text="1"
          android:textSize="16sp"
          />

    </RelativeLayout>

  </com.zhy.android.percent.support.PercentLinearLayout>


</RelativeLayout>