<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <cn.fuyoushuo.vipmovie.view.layout.MyScrollingView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@mipmap/backgroud"
                            android:id="@+id/topImage"/>

                        <com.zhy.android.percent.support.PercentRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/zxing_transparent"
                            android:id="@+id/title_container"
                            android:layout_marginBottom="11dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_widthPercent="80%w"
                                app:layout_heightPercent="70%h"
                                android:background="@drawable/textborder"
                                android:text="搜索或输入网址"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:id="@+id/title"
                                android:layout_centerInParent="true"/>

                        </com.zhy.android.percent.support.PercentRelativeLayout>

                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:id="@+id/sites_area"
                        android:background="@color/white"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/top_container">
                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/top"
                            android:background="@color/module_19" />
                    </LinearLayout>

                     <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_bottomRcycleView"
                        android:background="@color/module_19"
                         >
                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>
         </cn.fuyoushuo.vipmovie.view.layout.MyScrollingView>


     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/title_ess_container"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/top_ess_container"
                android:orientation="vertical" />
        </LinearLayout>

</RelativeLayout>