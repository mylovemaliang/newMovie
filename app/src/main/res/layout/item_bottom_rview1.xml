<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/white"
    app:layout_collapseParallaxMultiplier="1.0">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent = "60%w"
            app:layout_marginLeftPercent="2%w"
            android:id="@+id/left_area">

            <TextView
                android:id="@+id/news_title"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="100%w"
                app:layout_heightPercent="70%h"
                android:text="为什么说彪悍的俄罗斯人是“战斗民族“?"
                android:textStyle="normal"
                android:textSize="16sp"
                android:typeface="serif"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/news_source"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="30%h"
                android:text="果壳网"
                android:textSize="11sp"
                android:gravity="center_vertical" />



        </com.zhy.android.percent.support.PercentLinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="35%w"
            android:layout_alignParentRight="true">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/news_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:padding="10dp"
                android:layout_centerInParent="true"
                fresco:failureImage="@mipmap/default_img"
                fresco:placeholderImage="@mipmap/default_img"/>

        </RelativeLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>


</android.support.v7.widget.CardView>