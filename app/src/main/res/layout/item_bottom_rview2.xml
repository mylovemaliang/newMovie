<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/white"
    app:layout_collapseParallaxMultiplier="1.0">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent = "25%h"
            app:layout_marginLeftPercent="2%w"
            android:id="@+id/top3_area">

            <TextView
                android:id="@+id/news3_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="为什么说彪悍的俄罗斯人是“战斗民族“?"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center_vertical" />

        </com.zhy.android.percent.support.PercentLinearLayout>


        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="55%h"
            app:layout_widthPercent="100%"
            android:layout_below="@+id/top3_area"
            android:id="@+id/image3_area"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/news3_image1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="33%w"
                android:scaleType="fitXY"
                android:padding="10dp"
                android:layout_centerInParent="true"
                fresco:failureImage="@mipmap/default_img"
                fresco:placeholderImage="@mipmap/default_img" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/news3_image2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="34%w"
                android:scaleType="fitXY"
                android:padding="10dp"
                android:layout_centerInParent="true"
                fresco:failureImage="@mipmap/default_img"
                fresco:placeholderImage="@mipmap/default_img" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/news3_image3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="33%w"
                android:scaleType="fitXY"
                android:padding="10dp"
                android:layout_centerInParent="true"
                fresco:failureImage="@mipmap/default_img"
                fresco:placeholderImage="@mipmap/default_img" />

        </com.zhy.android.percent.support.PercentLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="20%h"
            app:layout_marginLeftPercent="2%w"
            android:id="@+id/news3_source"
            android:text="果壳网"
            android:textSize="11sp"
            android:gravity="center_vertical"
            android:layout_below="@+id/image3_area" />

    </com.zhy.android.percent.support.PercentRelativeLayout>


</android.support.v7.widget.CardView>